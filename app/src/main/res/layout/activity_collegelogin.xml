<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".College.College_Login"
    android:orientation="horizontal"
    android:background="@color/colorCollege">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_string"
        android:textSize="40sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:fontFamily="@font/roboto"/>


    <EditText
        android:id="@+id/college_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="nicollege@gmail.com"
        android:layout_marginRight="30dp"
        android:drawableRight="@drawable/ic_email_blac_24dp"
        android:background="@drawable/edittext_border_new"
        android:hint="Email"
        android:layout_above="@id/college_password_login"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20dp"
        android:layout_marginBottom="40dp" />
<EditText
        android:id="@+id/college_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="12345"
        android:background="@drawable/edittext_border_new"
        android:hint="Password"
    android:drawableRight="@drawable/ic_lock_blac_24dp"
        android:layout_centerInParent="true"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/loginbtnbg"
        android:text="Login"
        android:onClick="collegeLogin"
        android:textSize="20dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:layout_below="@id/college_password_login"
        />
    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/college_password_login"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="#647BA5"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/donthave"
                android:layout_alignBottom="@id/clgsignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/clgsignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/donthave"
                android:text=" Sign Up"
                android:textStyle="bold"
                android:textColor="#3BA03F"
                android:fontFamily="@font/ubuntu"
                android:textSize="30sp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>