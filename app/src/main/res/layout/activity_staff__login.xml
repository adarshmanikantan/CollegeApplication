<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Login"
    android:orientation="horizontal"
    android:background="#fff">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginLeft="10dp"
        android:textSize="55sp"
        android:textColor="#000"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/sansation"/>



    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv"
        android:background="@drawable/layoutbackground"
        android:elevation="10dp">
        <EditText
            android:id="@+id/et_emp_stafflogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/staffedittext"
            android:hint="Employee id"
            android:text="AM101"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#3C3535"
            android:textSize="20dp"
            android:layout_marginBottom="10dp" />



        <EditText
            android:id="@+id/et_password_stafflogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/staffedittext"
            android:hint="Password"
            android:text="1947"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:textColorHint="#3C3535"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/img_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_press_new"
            android:gravity="center"
            android:padding="10dp"
            android:text="Login"
            android:onClick="staffLoginClick"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold" />



    </LinearLayout>
        </RelativeLayout>


