<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Selection"
    >

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let Us Know"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:id="@+id/textview2"
        android:layout_below="@id/textview1"
        android:layout_width="wrap_content"
        android:layout_marginTop="9dp"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Who"
        android:textColor="#000"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:layout_below="@id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/textview2"
        android:text=" You Are."
        android:textColor="@color/colorBg"
        android:textSize="40sp"
        android:fontFamily="@font/roboto"/>
<RelativeLayout
    android:id="@+id/layout1"
    android:onClick="studentClick"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/textview2">
<RelativeLayout
    android:id="@+id/studentlayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/student_background"
    android:layout_marginTop="50dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:fontFamily="@font/roboto"
        android:textSize="30sp"
        android:layout_marginRight="30dp"
        android:textColor="#fff"
        />
</RelativeLayout>
    <ImageView
        android:id="@+id/studentimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/student"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:onClick="staffClick">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/staff_background"
        android:id="@+id/stafflayout"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staff"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto"
            android:textSize="30sp"
            android:layout_marginRight="30dp"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/staffimg"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/staff"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2">

    <RelativeLayout
        android:id="@+id/parentlayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/parent_background"
        android:layout_marginTop="70dp"
        android:onClick="parentClick"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto"
            android:textSize="30sp"
            android:layout_marginRight="30dp"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/parentimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3">

        <RelativeLayout
            android:id="@+id/alumnilayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/parent_background"
            android:layout_marginTop="70dp"
            android:onClick="alumniClick"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alumni"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto"
                android:textSize="30sp"
                android:layout_marginRight="30dp"
                android:textColor="#fff"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/alumniimg"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hr_manager"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout5"
        android:onClick="collegeClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4">

    <RelativeLayout
        android:id="@+id/collegelayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/college_background"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto"
            android:textSize="30sp"
            android:layout_marginRight="30dp"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/collegeimg"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/collegepng"/>




</RelativeLayout>
</RelativeLayout>
</ScrollView>